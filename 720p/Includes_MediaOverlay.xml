<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Global_MediaOverlay">
		<control type="group">
			<visible>!Window.IsActive(visualisation) + !Window.IsActive(karaoke) + !SubString(Window(videolibrary).Property(TvTunesIsAlive),True)</visible>

			<control type="group" id="9905">
				<posx>36</posx>
				<posy>560</posy>
				<animation effect="slide" start="0,0" end="204,0" time="600" tween="cubic" easing="out" condition="Skin.HasSetting(MediaOverlay)">Conditional</animation>
				<include>Animation_SlideLeftFadeOut</include>
				<visible>Player.HasAudio + Skin.HasSetting(MusicSongInfoOverlay)</visible>
				<visible>![Control.IsVisible(9901) | Control.IsVisible(9902) | Control.IsVisible(9900) | Container.Content(Addons) | Window.IsActive(Settings) | Window.IsActive(videossettings) | Window.IsActive(picturessettings) | Window.IsActive(appearancesettings) | Window.IsActive(servicesettings) | Window.IsActive(systemsettings) | Window.IsActive(musicsettings) | Window.IsActive(weathersettings) | Window.IsActive(profiles) | Window.IsActive(56)] + [!Control.HasFocus(9001) | ![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)]] + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)] + [[Control.HasFocus(9000) + Skin.HasSetting(HomeCleanLibrary)] | [!SubString(Container(9000).ListItem.Property(hasSubmenu),True) | ![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)]]] + !StringCompare(Container(9000).ListItem.Property(Widget),WeatherForecast)</visible>
				<control type="grouplist">
					<posx>0</posx>
					<posy>0</posy>
					<width>1000</width>
					<itemgap>5</itemgap>
					<align>left</align>
					<orientation>vertical</orientation>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>25</height>
						<aligny>center</aligny>
						<width min="10" max="1000">auto</width>
						<font>METF_DialogLarge</font>
						<label>$INFO[MusicPlayer.Artist]</label>
						<textcolor>NowPlayingDetails</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>25</height>
						<aligny>center</aligny>
						<width min="10" max="1000">auto</width>
						<scrollout>false</scrollout>
						<pauseatend>1800</pauseatend>
						<scrollspeed>40</scrollspeed>
						<scroll>true</scroll>
						<font>METF_DialogLarge</font>
						<label>$INFO[MusicPlayer.Title]</label>
						<textcolor>NowPlayingDetails</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>25</height>
						<aligny>center</aligny>
						<width min="10" max="1000">auto</width>
						<font>METF_TitleText</font>
						<label>$INFO[MusicPlayer.Album]</label>
						<textcolor>WeatherLowTemp</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>25</height>
						<aligny>center</aligny>
						<width min="10" max="1000">auto</width>
						<font>METF_TitleText</font>
						<label>$INFO[MusicPlayer.Year]</label>
						<textcolor>WeatherLowTemp</textcolor>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>0</posy>
						<height>25</height>
						<aligny>center</aligny>
						<width min="10" max="1000">auto</width>
						<font>METF_TitleText</font>
						<label>$INFO[MusicPlayer.Time]/$INFO[MusicPlayer.Duration]</label>
						<textcolor>WeatherLowTemp</textcolor>
					</control>
				</control>
			</control>
			<control type="group" id="9904">
				<posx>20</posx>
				<posy>560</posy>
				<visible>Skin.HasSetting(MediaOverlay)</visible>
				<control type="image">
					<posx>18</posx>
					<posy>8</posy>
					<width>135</width>
					<height>135</height>
					<include>Animation_SpinningCD</include>
					<visible>Player.HasAudio</visible>
				</control>
				<control type="image">
					<description>cd cover image</description>
					<width>150</width>
					<height>150</height>
					<texture background="true">$INFO[MusicPlayer.Cover]</texture>
					<aspectratio aligny="bottom">stretch</aspectratio>
			<!--		<bordertexture border="8">thumb_border.png</bordertexture>
			-->		<bordersize>6</bordersize>
					<visible>Player.HasAudio + Skin.HasSetting(CaseOveralys)</visible>
				</control>
				<control type="image">
					<description>cover image</description>
					<posx>-55</posx>
					<posy>-30</posy>
					<width>246</width>
					<height>213</height>
					<texture background="true">flags/Overlays/cdcover.png</texture>
					<aspectratio>stretch</aspectratio>
					<visible>Player.HasAudio</visible>
				</control>
				<control type="videowindow" id="1">
					<description>Video Preview</description>
					<posy>13</posy>
					<width>220</width>
					<height>124</height>
					<visible>Player.HasVideo + ![Window.IsActive(selectdialog)] + ![Window.IsActive(home) + [Skin.HasSetting(home1)| Skin.HasSetting(home3)]]</visible>
				</control>
			</control>
		</control>
	</include>
</includes>
