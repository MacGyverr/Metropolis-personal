<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home2 Icons -->
	<visible>Skin.HasSetting(Home2)</visible>
	<include name="HomeStatsPosition2">	
		<posx>40</posx>
		<posy>570</posy>
		<width>220</width>
		<height>416</height>
	</include>
	<include name="HomeStatsDetails2">
		<width>120</width>
		<height>24</height>
		<align>left</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsCategory</textcolor>
	</include>
	<include name="HomeStatsDetailsNumber2">
		<width>60</width>
		<height>24</height>
		<align>right</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsNumber</textcolor>
	</include>
	
	<include name="Home2_Icons">
		<include>HomeDeck</include>
		<control type="button" id="9002">
			<description>Hidden Button to pass through navigation when recently added is disabled</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label>-</label>
			<font>-</font>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>9000</onup>
			<ondown>9001</ondown>
			<visible>false</visible>
		</control>

		<!-- Kodi Logo and Skin Name -->
		<control type="group">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<control type="image">
				<posx>-20</posx>
				<posy>25</posy>
				<width>240</width>
				<height>54</height>
				<aspectratio aligny="bottom">keep</aspectratio>
				<colordiffuse>KodiLogoDiffuse</colordiffuse>
				<texture>kodi-logo2.png</texture>
			</control>
			<control type="label">
				<posx>75</posx>
				<posy>67</posy>
				<width>274</width>
				<height>30</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>METF_Heading</font>
				<textcolor>Home2SkinName</textcolor>
				<label>$LOCALIZE[31011]</label>
			</control>
		</control>
		<!-- Main Menu -->
		<control type="wraplist" id="9000">
			<posx>10</posx>
			<posy>65</posy>
			<height>450</height>
			<width>1260</width>
			<onup>9002</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<viewtype>list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>3</focusposition>
			<scrolltime>200</scrolltime>
			<!-- Setting preloaditems to anything greater than zero currently causes -->
			<!-- flickering/slowdown if any home items are hidden.  -->
			<!-- See http://trac.kodi.tv/ticket/12145 and https://github.com/stoli/Metropolis/issues/21 -->
			<!--<preloaditems>2</preloaditems>-->
			<preloaditems>0</preloaditems>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<itemlayout width="180" height="450">
				<control type="image">
					<posx>15</posx>
					<posy>75</posy>
					<width>150</width>
					<height>300</height>
					<texture>$INFO[ListItem.ActualIcon]</texture>
					<aspectratio>stretch</aspectratio>
			<visible allowhiddenfocus="true">![Control.HasFocus(8000) + [StringCompare(Container(9000).ListItem.Property(Widget),XKCD) | StringCompare(Container(9000).ListItem.Property(Widget),Cyanide) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabe) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabes)]]</visible>
				</control>
				<control type="image">
					<posx>5</posx>
					<posy>59</posy>
					<width>180</width>
					<height>335</height>
					<texture>frames/ClassicFrame_Tall.png</texture>
					<aspectratio>stretch</aspectratio>
			<visible allowhiddenfocus="true">![Control.HasFocus(8000) + [StringCompare(Container(9000).ListItem.Property(Widget),XKCD) | StringCompare(Container(9000).ListItem.Property(Widget),Cyanide) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabe) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabes)]]</visible>
				</control>
			</itemlayout>
			<focusedlayout width="180" height="450">
				<control type="image">
					<posx>15</posx>
					<posy>75</posy>
					<width>150</width>
					<height>300</height>
					<texture>$INFO[ListItem.ActualIcon]</texture>
					<aspectratio>stretch</aspectratio>
					<animation reversible="false" effect="zoom" center="auto" start="100" end="112" time="200" tween="sine" easing="inout">focus</animation>
					<animation reversible="false" effect="zoom" center="auto" start="112" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
			<visible allowhiddenfocus="true">![Control.HasFocus(8000) + [StringCompare(Container(9000).ListItem.Property(Widget),XKCD) | StringCompare(Container(9000).ListItem.Property(Widget),Cyanide) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabe) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabes)]]</visible>
				</control>					
				<control type="image">
					<posx>5</posx>
					<posy>59</posy>
					<width>180</width>
					<height>335</height>
					<texture>frames/ClassicFrame_Tall.png</texture>
					<aspectratio>stretch</aspectratio>
					<animation reversible="false" effect="zoom" center="auto" start="100" end="112" time="200" tween="sine" easing="inout">focus</animation>
					<animation reversible="false" effect="zoom" center="auto" start="112" end="100" time="200" tween="sine" easing="inout">unfocus</animation>
			<visible allowhiddenfocus="true">![Control.HasFocus(8000) + [StringCompare(Container(9000).ListItem.Property(Widget),XKCD) | StringCompare(Container(9000).ListItem.Property(Widget),Cyanide) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabe) | StringCompare(Container(9000).ListItem.Property(Widget),Dailybabes)]]</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>
		
		<!-- Main menu Icon Label -->
		<control type="label">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<posx>490</posx>
			<posy>480</posy>
			<width>300</width>
			<height>30</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>METF_HomeMenu</font>
			<textcolor>HomeMenuTextFocused</textcolor>
			<label>$INFO[Container(9000).ListItem.Label]</label>
		</control>
		<!-- Help Arrow when submenu present -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>Control.HasFocus(9001) | [Control.HasFocus(9000) | Control.HasFocus(9001)] + SubString(Container(9000).ListItem.Property(hasSubmenu),True) + [Control.HasFocus(9000) + !Skin.HasSetting(HomeCleanLibrary)]</visible>
			<control type="image">
				<posx>625</posx>
				<posy>505</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowDown.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
		</control>

		<control type="list" id="9001">
			<posx>490</posx>
			<posy>554</posy>
			<width>300</width>
			<height>170</height>
			<onup>9001</onup>
			<ondown>9001</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<visible allowhiddenfocus="true">Control.HasFocus(9001) | ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)] + [Control.HasFocus(9000) + !Skin.HasSetting(HomeCleanLibrary)] + !StringCompare(Container(9000).ListItem.Property(Widget),HomeForecast)</visible>
			<orientation>vertical</orientation>
			<defaultcontrol always="true">1</defaultcontrol>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<itemlayout width="450" height="20">
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<label>$INFO[ListItem.Label]</label>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuText</textcolor>
				</control>
			</itemlayout>
			<focusedlayout width="450" height="20">
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuText</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible allowhiddenfocus="false">!Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<top>0</top>
					<left>0</left>
					<width>300</width>
					<height>20</height>
					<align>center</align>
					<font>METF_HomeMenuSmall</font>
					<textcolor>SubmenuTextFocused</textcolor>
					<shadowcolor>ff000000</shadowcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible allowhiddenfocus="false">Control.HasFocus(9001)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-submenu</include>
			</content>
		</control>

		<!-- Shared Home Stats/Media Totals -->
		<include>HomeStats</include>	
		
	</include>
</includes>
