<?xml version="1.0" encoding="UTF-8"?>
<window id="0">
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload>RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=1)</onload>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>Global_Background</include>
		<include condition="![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)]">Home1_Default</include>
		<include condition="Skin.HasSetting(Home2)">Home2_Icons</include>
		<include condition="Skin.HasSetting(Home3)">Home3_Wide</include>
		<include>Global_ContextFilter</include>
		<include>Global_Weather</include>
		<include>Global_Time</include>
		<include>Global_MediaOverlay</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
		<control type="rss">
			<description>RSS Feed</description>
			<posx>0</posx>
			<posy>4</posy>
			<width>1280</width>
			<height>20</height>
			<font>METF_RSS</font>
			<urlset>1</urlset>
			<titlecolor>RSSTitle</titlecolor>
			<headlinecolor>RSSHeadline</headlinecolor>
			<textcolor>RSSText</textcolor>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>system.getbool(lookandfeel.enablerssfeeds)</visible>
		</control>
		
		<control type="group">
			<visible>Player.HasVideo + Skin.HasSetting(home1)</visible>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<control type="image">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<texture>frames/ClassicFrame_Background.png</texture>
				<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
			</control>
			<control type="videowindow" id="1">
				<description>Video Preview</description>
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
			</control>
			<control type="image">
				<posx>215</posx>
				<posy>25</posy>
				<width>848</width>
				<height>507</height>
				<texture>frames/ClassicFrame_Fanart.png</texture>
			</control>
			<control type="grouplist">
				<posx>260</posx>
				<posy>461</posy>
				<width>760</width>
				<height>30</height>
				<itemgap>10</itemgap>
				<align>left</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width min="10" max="760">auto</width>
					<font>METF_DialogLargeBold</font>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<textcolor>NowPlayingTitle</textcolor>
					<shadowcolor>Black</shadowcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width min="10" max="760">auto</width>
					<font>METF_DialogLargeBold</font>
					<label>$INFO[VideoPlayer.Season]$INFO[VideoPlayer.Episode, x ]</label>
					<textcolor>NowPlayingDetails</textcolor>
					<shadowcolor>Black</shadowcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>30</height>
					<aligny>center</aligny>
					<width min="10" max="760">auto</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>METF_DialogLargeBold</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingTitle</textcolor>
					<shadowcolor>Black</shadowcolor>
				</control>
			</control>
		</control>	
		<control type="group">
			<posx>390</posx>
			<posy>-5</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>Player.HasVideo + !Skin.HasSetting(home1) | ![Window.IsActive(home) + Skin.HasSetting(home1)]</visible>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>-10</posy>
				<width>500</width>
				<height>75</height>
				<texture>dialogs/DialogBG_Dropdown2.png</texture>
				<colordiffuse>DialogDropdownColor</colordiffuse>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>6</posy>
				<width>460</width>
				<font>METF_DialogSmallBold</font>
				<align>center</align>
				<label>13350</label>
				<textcolor>NowPlayingDetails2</textcolor>
			</control>
			<control type="grouplist">
				<posx>30</posx>
				<posy>26</posy>
				<width>440</width>
				<height>25</height>
				<itemgap>10</itemgap>
				<align>center</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>25</height>
					<aligny>center</aligny>
					<width min="10" max="440">auto</width>
					<font>METF_DialogSmallBold</font>
					<label>$INFO[VideoPlayer.TVShowTitle]</label>
					<textcolor>NowPlayingTitle2</textcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>25</height>
					<aligny>center</aligny>
					<width min="10" max="440">auto</width>
					<font>METF_DialogSmallBold</font>
					<label>$INFO[VideoPlayer.Season]$INFO[VideoPlayer.Episode, x ]</label>
					<textcolor>NowPlayingDetails2</textcolor>
					<visible>!IsEmpty(VideoPlayer.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<height>25</height>
					<aligny>center</aligny>
					<width min="10" max="440">auto</width>
					<scrollout>false</scrollout>
					<pauseatend>1800</pauseatend>
					<scrollspeed>40</scrollspeed>
					<scroll>true</scroll>
					<font>METF_DialogSmallBold</font>
					<label>$INFO[VideoPlayer.Title]</label>
					<textcolor>NowPlayingTitle2</textcolor>
				</control>
			</control>
		</control>	
	</controls>
</window>
