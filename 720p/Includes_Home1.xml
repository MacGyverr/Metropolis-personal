<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Home1 Default-->
	<visible>![Skin.HasSetting(Home2) | Skin.HasSetting(Home3)]</visible>

	<include name="HomeStatsPosition1">	
		<posx>1070</posx>
		<posy>45</posy>
		<width>220</width>
		<height>416</height>
	</include>
	<include name="HomeStatsDetails1">
		<width>120</width>
		<height>24</height>
		<align>left</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsCategory</textcolor>
	</include>
	<include name="HomeStatsDetailsNumber1">
		<width>60</width>
		<height>24</height>
		<align>right</align>
		<aligny>center</aligny>
		<font>METF_HomeStatsText</font>
		<textcolor>HomeStatsNumber</textcolor>
	</include>

	<include name="Home1_Default">
		<include>HomeDeck</include>
		<control type="button" id="9002">
			<description>Hidden Button to pass through navigation when recently added is disabled</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<label>-</label>
			<font>-</font>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onleft>9000</onleft>
			<onright>9001</onright>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<visible>false</visible>
		</control>

		<!-- Large Fanart and Frame -->
		<control type="group">
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<control type="image">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<texture>frames/ClassicFrame_Background.png</texture>
				<colordiffuse>FrameBackgroundDiffuse</colordiffuse>
			</control>
			<control type="multiimage">
				<description>Weather Multi-image background</description>
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<imagepath>$VAR[Weather_Fanart]</imagepath>
				<timeperimage>5000</timeperimage>
				<fadetime>2000</fadetime>
				<pauseatend>10000</pauseatend>
				<randomize>true</randomize>
				<loop>yes</loop>
				<aspectratio>stretch</aspectratio>
			<visible allowhiddenfocus="true">!Window.IsActive(videooverlay) + StringCompare(Container(9000).ListItem.Property(labelID),weather) + Skin.HasSetting(DynamicWeather) + !Skin.HasSetting(NoWeather)</visible>
			</control>	
			<control type="multiimage">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<timeperimage>15000</timeperimage>
				<randomize>true</randomize>
				<fadetime>500</fadetime>
				<imagepath background="true">$VAR[HomeBackground]</imagepath>
				<aspectratio>stretch</aspectratio>
				<visible>!Window.IsActive(videooverlay)</visible>
			<visible allowhiddenfocus="true">!StringCompare(Container(9000).ListItem.Property(labelID),weather) | !Skin.HasSetting(DynamicWeather)</visible>
			</control>	
			<control type="videowindow">
				<posx>240</posx>
				<posy>50</posy>
				<width>800</width>
				<height>450</height>
				<visible>Player.HasVideo</visible>
			</control>
			<control type="image">
				<posx>215</posx>
				<posy>25</posy>
				<width>848</width>
				<height>507</height>
				<texture>frames/ClassicFrame_Fanart.png</texture>
			</control>
		</control>
		
		<!-- Help Text for LEFT side of Home screen -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<visible>!Skin.HasSetting(HideHelpText)</visible>
			<visible>!Control.HasFocus(9001) + [Control.HasFocus(9000) + SubString(Container(9000).ListItem.Property(hasSubmenu),True)] | [Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)]</visible>
			<control type="image">
				<posx>190</posx>
				<posy>475</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowRight.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
			<control type="label">
				<posx>188</posx>
				<posy>477</posy>
				<width>140</width>
				<height>25</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>METF_HelpText</font>
				<textcolor>HelpText</textcolor>
				<label>$LOCALIZE[1034]</label>
			</control>
		</control>
		<!-- Help Text for RIGHT side of Home screen -->
		<control type="group">
			<posx>0</posx>
			<posy>2</posy>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<animation effect="slide" start="180,0" end="0,0" tween="back" easing="out" time="300">Visible</animation>
			<animation effect="slide" start="0,0" end="180,0" tween="quadratic" easing="in" time="300">Hidden</animation>
			<visible>!Skin.HasSetting(HideHelpText)</visible>
			<visible>Control.HasFocus(9001) + !StringCompare(Container(9000).ListItem.Property(hasSubmenu),True) | [Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)]</visible>
			<control type="image">
				<posx>1060</posx>
				<posy>475</posy>
				<width>30</width>
				<height>30</height>
				<texture>ArrowLeft.png</texture>
				<colordiffuse>HelpArrowDiffuse</colordiffuse>
			</control>
			<control type="label">
				<posx>1092</posx>
				<posy>477</posy>
				<width>140</width>
				<height>25</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>METF_HelpText</font>
				<textcolor>HelpText</textcolor>
				<label>$LOCALIZE[33061]</label>
			</control>
		</control>
		
		<!-- Main Menu -->
		<control type="list" id="9000">
			<posx>0</posx>
			<posy>50</posy>
			<width>220</width>
			<height>416</height>
			<onup>9000</onup>
			<ondown>9000</ondown>
			<onleft>9002</onleft>
			<onright>9001</onright>
			<viewtype>list</viewtype>
			<orientation>vertical</orientation>
			<include>Animation_OpenCloseFade</include>
			<include>Animation_FadedByMenu</include>
			<itemlayout width="200" height="32">
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>200</width>
					<height>32</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_HomeMenu</font>
					<textcolor>HomeMenuText</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>
			<focusedlayout width="220" height="32">
				<!-- Focus Bar -->
				<control type="image">
					<posx>15</posx>
					<posy>0</posy>
					<width>208</width>
					<height>32</height>
					<aligny>center</aligny>
					<texture flipx="true">FocusLine.png</texture>
					<colordiffuse>FocusBar</colordiffuse>
					<visible>!ControlGroup(9001).HasFocus() + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)]</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>200</width>
					<height>32</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_HomeMenu</font>
					<textcolor>FocusBarText</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>!ControlGroup(9001).HasFocus() + ![Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)]</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>0</posy>
					<width>200</width>
					<height>32</height>
					<align>right</align>
					<aligny>center</aligny>
					<font>METF_HomeMenu</font>
					<textcolor>HomeMenuTextFocused</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>ControlGroup(9001).HasFocus() | Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-mainmenu</include>
			</content>
		</control>

	<!--  SubMenus -->	
		
		<control type="list" id="9001">
		<posx>1060</posx>
		<posy>50</posy>
		<width>220</width>
		<height>416</height>
		<orientation>vertical</orientation>
		<align>left</align>
		<itemgap>0</itemgap>
		<onleft>9000</onleft>
		<onright>9000</onright>
		<defaultcontrol always="true">1</defaultcontrol>
		<scrolltime tween="sine" easing="out">240</scrolltime>
			<animation effect="slide" start="180,0" end="0,0" tween="back" easing="out" time="300">Visible</animation>
			<animation effect="slide" start="0,0" end="180,0" tween="quadratic" easing="in" time="300">Hidden</animation>
		<include>Animation_OpenCloseFade</include>
		<include>Animation_FadedByMenu</include>
		<visible allowhiddenfocus="true">[Control.HasFocus(9000) + !Skin.HasSetting(HomeStats) + !Skin.HasSetting(HomeCleanLibrary)] | Control.HasFocus(9001) | [[Control.HasFocus(8000) | Control.HasFocus(8001) | Control.HasFocus(8002) | Control.HasFocus(8003) | Control.HasFocus(8004)] + !Skin.HasSetting(HomeStats) + !Skin.HasSetting(HomeCleanLibrary)]</visible>
		<itemlayout width="450" height="32">
				<control type="label">
					<top>0</top>
					<left>005</left>
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<font>METF_HomeMenuSmall</font>
					<textcolor>HomeMenuText</textcolor>	
				</control>
			</itemlayout>
			<focusedlayout width="450" height="32">
				<control type="image">
					<top>0</top>
					<left>005</left>
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<aligny>center</aligny>
					<texture flipx="false">FocusLine.png</texture>
					<colordiffuse>FocusBar</colordiffuse>
					<visible allowhiddenfocus="true">Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<top>0</top>
					<left>005</left>
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<font>METF_HomeMenuSmall</font>
					<textcolor>HomeMenuText</textcolor>
					<visible allowhiddenfocus="true">!Control.HasFocus(9001)</visible>
				</control>
				<control type="label">
					<top>0</top>
					<left>005</left>
					<width>208</width>
					<height>32</height>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<font>METF_HomeMenuSmall</font>
					<textcolor>FocusBarText</textcolor>
					<visible allowhiddenfocus="true">Control.HasFocus(9001)</visible>
				</control>
			</focusedlayout>
			<content>
				<include>skinshortcuts-submenu</include>
			</content>
		</control>

		<!-- Shared Home Stats/Media Totals -->
		<include>HomeStats</include>
		
	</include>
</includes>
