	<controls>
	<!-- Background -->
		<include>Global_Background</include>

	<!-- Heading -->
		<control type="group">
			<posx>30</posx>
			<posy>10</posy>
			<control type="label">
				<description>header left label</description>
				<label>$LOCALIZE[5]</label>
				<width>1280</width>
				<height>30</height>
				<font>METF_Heading</font>
				<textcolor>GlobalHeading</textcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			<control type="label" id="500">
				<description>header middle label</description>
				<width>1220</width>
				<height>30</height>
				<font>METF_Heading</font>
				<textcolor>GlobalHeading</textcolor>
				<align>center</align>
