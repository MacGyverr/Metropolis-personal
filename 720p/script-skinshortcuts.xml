			<control type="button" id="308">
				<width>240</width>
				<height>38</height>
				<align>center</align>
				<font>METF_TitleTextMedium</font>
				<textcolor>white</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturefocus border="5">ButtonFo.png</texturefocus>
				<texturenofocus border="5">ButtonNf.png</texturenofocus>
				<label>$ADDON[script.skinshortcuts 32028]</label>
			</control>
		<!-- Reset all -->
			<control type="button" id="999">
				<width>275</width>
				<height>38</height>
				<align>center</align>
				<font>METF_TitleTextMedium</font>
				<textcolor>white</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturefocus border="5">ButtonFo.png</texturefocus>
				<texturenofocus border="5">ButtonNf.png</texturenofocus>
				<onclick>RunScript(script.skinshortcuts,type=resetall)</onclick>
				<label>$ADDON[script.skinshortcuts 32037]</label>
			</control>
		</control>
	
		<include>Global_ContextFilter</include>
		<include>Global_Weather</include>
		<include>Global_Time</include>
		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>
	</controls>

</window>
