				<aligny>center</aligny>
				<label>$INFO[Container(211).ListItem.Label] $INFO[Container(211).ListItem.Label2]</label>
			</control>
		</control>
		
	<!-- Move down -->
		<control type="button" id="304">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>noop</onleft>
			<onright>303</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>
	<!-- Move up -->
		<control type="button" id="303">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>304</onleft>
			<onright>302</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>	
	<!-- Remove -->
		<control type="button" id="302">
			<left>-10</left>
			<top>-10</top>
			<width>1</width>
			<height>1</height>
			<onleft>303</onleft>
			<onright>9001</onright>
			<onup>Control.Move(211,-1)</onup>
			<ondown>Control.Move(211,1)</ondown>
		</control>

	<!-- Left list -->
		<control type="list" id="211">
			<left>0</left>
			<top>65</top>
			<width>370</width>
			<height>462</height>
			<onleft>noop</onleft>
			<onright>304</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<itemlayout width="375" height="38">
				<control type="label">
					<left>-75</left>
					<top>5</top>
					<width>350</width>
					<height>38</height>
					<font>METF_TitleTextMedium</font>
					<textcolor>white</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(211)">Conditional</animation>
				</control>
			</itemlayout>
			<focusedlayout width="375" height="38">
				<control type="image">
					<left>00</left>
					<top>5</top>
					<width>375</width>
					<height>38</height>
					<align>left</align>
					<aligny>center</aligny>
					<texture border="5">ButtonFo.png</texture>
				</control>
				<control type="image">
					<left>283</left>
					<top>8</top>
					<width>29</width>
					<height>29</height>
					<texture>osd/osd_button_channel_previous_fo.png</texture>
					<visible>!Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>311</left>
					<top>8</top>
					<width>29</width>
					<height>29</height>
					<texture>osd/osd_button_channel_next_fo.png</texture>
					<visible>!Control.HasFocus(303)</visible>
				</control>
				<control type="image">
					<left>339</left>
					<top>8</top>
					<width>29</width>
					<height>29</height>
					<texture>osd/osd_button_ban_fo.png</texture>
					<visible>!Control.HasFocus(302)</visible>
				</control>
				<control type="image">
					<left>283</left>
					<top>8</top>
					<width>29</width>
					<height>29</height>
					<texture>osd/osd_button_channel_previous_fo.png</texture>
					<colordiffuse>SubmenuTextFocused</colordiffuse>
					<visible>Control.HasFocus(304)</visible>
				</control>
				<control type="image">
					<left>311</left>
					<top>8</top>
					<width>29</width>
					<height>29</height>
					<texture>osd/osd_button_channel_next_fo.png</texture>
					<colordiffuse>SubmenuTextFocused</colordiffuse>
					<visible>Control.HasFocus(303)</visible>
				</control>
				<control type="image">
					<left>339</left>
					<top>8</top>
					<width>29</width>
					<height>29</height>
					<texture>osd/osd_button_ban_fo.png</texture>
					<colordiffuse>SubmenuTextFocused</colordiffuse>
					<visible>Control.HasFocus(302)</visible>
				</control>
				<control type="label">
					<left>-75</left>
					<top>5</top>
					<width>350</width>
					<height>38</height>
					<font>METF_TitleTextMedium</font>
					<textcolor>white</textcolor>
					<align>right</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</focusedlayout>
		</control>
		
	<!--  Icon and Thumbnail Background-->	
		<control type="image" id="913">
			<left>550</left>
			<top>144</top>
			<width>448</width>
			<height>182</height>
			<texture background="true" >list/listfocus.png</texture>
			<colordiffuse>BackgroundColor</colordiffuse>
		</control>
		
	<!-- Right grouplist -->
		<control type="grouplist" id="9000">
			<left>385</left>
			<top>70</top>
			<width>800</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>302</onleft>
			<onright>noop</onright>
			<onup>10</onup>
			<ondown>10</ondown>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>
			<scrolltime tween="sine" easing="out">240</scrolltime>
		<!-- Change shortcut -->
			<control type="button" id="401">
				<left>0</left>
				<top>0</top>
				<width>700</width>
				<height>36</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$ADDON[script.skinshortcuts 32048]</label>
				<label2>$INFO[Container(211).ListItem.Property(path)]</label2>
			</control>
			<control type="image" id="907">
				<height>8</height>
				<width>700</width>
				<texture border="2">settings_line.png</texture>
				<colordiffuse>SettingsLine</colordiffuse>
			</control>		
		<!-- Change thumbnail -->
			<control type="button" id="306">
				<description>Choose thumbnail Button</description>
				<left>0</left>
				<top>0</top>
				<width>700</width>
				<height>42</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>top</aligny>
				<label>20019</label>
				<label2>$INFO[Container(211).ListItem.Property(thumbnail)]</label2>
			</control>
		<!-- Background Icon -->		
			<control type="image" id="909">
				<left>210</left>
				<top>0</top>
				<width>80</width>
				<height>140</height>
				<texture background="true" fallback="DefaultShortcut.png">$INFO[Container(211).ListItem.ActualIcon]</texture>
			</control>	
		<!-- Background Thumbnail -->	
			<control type="image" id="910">
				<left>350</left>
				<top>-140</top>
				<width>220</width>
				<height>140</height>
				<texture background="true" fallback="DefaultShortcut.png">$INFO[Container(211).ListItem.Icon]</texture>
			</control>
		<!-- Current Icon Label-->	
			<control type="label" id="911">
				<left>150</left>
				<top>0</top>
				<width>200</width>
				<height>30</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[19282]</label>
			</control>
		<!-- Current Thumbnail Label-->	
			<control type="label" id="912">
				<left>360</left>
				<top>-30</top>
				<width>200</width>
				<height>30</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$LOCALIZE[20016]</label>
			</control>		
			<control type="image" id="908">
				<height>8</height>
				<width>700</width>
				<texture border="2">settings_line.png</texture>
				<colordiffuse>SettingsLine</colordiffuse>
			</control>
		<!-- Change label -->
			<control type="button" id="305">
				<left>0</left>
				<top>0</top>
				<width>700</width>
				<height>36</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$ADDON[script.skinshortcuts 32025]</label>
				<label2>$INFO[Container(211).ListItem.Label]</label2>
			</control>
		<!-- Edit widget -->
			<control type="button" id="309">
				<left>0</left>
				<top>0</top>
				<width>700</width>
				<height>36</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>	
				<label>$ADDON[script.skinshortcuts 32044]</label>
				<label2>$INFO[Container(211).ListItem.Property(widgetName)]</label2>
				<visible>StringCompare(Window.Property(groupname), mainmenu)</visible>
			</control>
		<!-- Change action -->
			<control type="button" id="307">
				<left>0</left>
				<top>0</top>
				<width>700</width>
				<height>36</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$ADDON[script.skinshortcuts 32027]</label>
<!--			<label2>$INFO[Container(211).ListItem.Property(displaypath)]</label2>  -->
			</control>
		<!-- Edit sub menu -->
			<control type="button" id="405">
				<left>0</left>
				<top>0</top>
				<width>700</width>
				<height>36</height>
				<font>METF_SettingsDetail</font>
				<textcolor>white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$ADDON[script.skinshortcuts 32072]</label>
				<visible>StringCompare(Window.Property(groupname),mainmenu)</visible>
			</control>
			<control type="image" id="906">
				<height>8</height>
				<width>700</width>
				<texture border="2">settings_line.png</texture>
				<colordiffuse>SettingsLine</colordiffuse>
			</control>
		</control>

	<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>385</left>
			<top>488</top>
			<width>800</width>
			<height>38</height>
			<itemgap>0</itemgap>
			<onleft>302</onleft>
			<onright>noop</onright>
			<onup>405</onup>
			<ondown>401</ondown>
			<orientation>horizontal</orientation>
		<!-- OK Button -->
			<control type="button" id="10">
				<width>90</width>
				<height>38</height>
				<label>186</label>
				<align>center</align>
				<font>METF_TitleTextMedium</font>
				<textcolor>white</textcolor>
				<focusedcolor>white</focusedcolor>
				<texturefocus border="5">ButtonFo.png</texturefocus>
				<texturenofocus border="5">ButtonNf.png</texturenofocus>
				<onback condition="StringCompare(Window.Property(groupname),mainmenu)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=0)</onback>
				<onclick condition="StringCompare(Window.Property(groupname),mainmenu)">RunScript(script.skinshortcuts,type=buildxml&amp;mainmenuID=9000&amp;levels=0)</onclick>
				<onclick>Close</onclick>
			</control>
