<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_Banner_Fixed">
		<control type="group">
			<visible>Control.IsVisible(513)</visible>
			<!-- Browser -->
			<control type="fixedlist" id="513">
				<posx>-330</posx>
				<posy>320</posy>
				<height>500</height>
				<width>1610</width>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>513</onleft>
				<onright>513</onright>
				<viewtype label="Banner Fixed">icon</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>2</focusposition>
				<scrolltime>200</scrolltime>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewBannerFixed)</visible>
				<visible>Window.IsActive(videolibrary) + [Container.Content(movies) | Container.Content(tvshows)]</visible>
				<itemlayout width="385" height="153">
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" fallback="default_banner.png" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Art(banner)]</texture>
						<fadetime>200</fadetime>
						<colordiffuse>LandscapeDiffuse</colordiffuse>
						<aspectratio aligny="center">keep</aspectratio>
						<include>Animation_HiddenByInfo</include>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>7</posy>
						<width>390</width>
						<height>86</height>
						<texture background="true">frames/banner_frame2.png</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="385" height="90">
					<control type="image">
						<posx>12</posx>
						<posy>15</posy>
						<width>375</width>
						<height>70</height>
						<texture background="true" fallback="default_banner.png" diffuse="frames/banner_diffuse.png">$INFO[ListItem.Art(banner)]</texture>
						<fadetime>200</fadetime>
						<aspectratio aligny="center">keep</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="50" end="100" time="400" tween="back" easing="out" />
						</animation>
					</control>
					<control type="image">
						<posx>4</posx>
						<posy>7</posy>
						<width>390</width>
						<height>86</height>
						<texture background="true">frames/banner_frame2.png</texture>
						<aspectratio scalediffuse="true">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="auto" start="50" end="100" time="400" tween="back" easing="out" />
						</animation>
					</control>
				</focusedlayout>
			</control>
			<!-- Browser labels -->
			<!-- Title -->
			<control type="label">
				<posx>40</posx>
				<posy>472</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>METF_TitleTextLarge</font>
				<textcolor>TitleText</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(videolibrary) + [Container.Content(tvshows) | Container.Content(movies)]</visible>
			</control>
			<control type="grouplist">
				<posx>40</posx>
				<posy>505</posy>
				<width>1200</width>
				<height>30</height>
				<align>center</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<visible>Window.IsActive(VideoLibrary) + [Container.Content(movies) | Container.Content(tvshows)]</visible>
				<include>VisibleIfNotMovieSet</include>
				<!-- Genre -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsGenre</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>32</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Genre) | IsEmpty(ListItem.Year)]</visible>
				</control>
				<!-- Year -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsYear</textcolor>
					<label>$INFO[ListItem.Year]</label>
					<visible>!IsEmpty(ListItem.Year)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>32</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Year) | IsEmpty(ListItem.Duration)]</visible>
				</control>
				<!-- Duration -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsDuration</textcolor>
					<label>$INFO[ListItem.Duration,, [LOWERCASE]$LOCALIZE[31299][/LOWERCASE]]</label>
					<visible>!IsEmpty(ListItem.Duration) + !SubString(ListItem.Duration,min) + !Container.Content(tvshows)</visible>
				</control>
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsDuration</textcolor>
					<label>$INFO[ListItem.Duration]</label>
					<visible>!IsEmpty(ListItem.Duration) + SubString(ListItem.Duration,min) + !Container.Content(tvshows)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>32</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>![IsEmpty(ListItem.Duration) | IsEmpty(ListItem.Property(TotalEpisodes))] + !Container.Content(tvshows)</visible>
				</control>
				<!-- Episode Count -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsEpisodes</textcolor>
					<label>$INFO[ListItem.Property(TotalEpisodes)] $LOCALIZE[20360]</label>
					<visible>!IsEmpty(ListItem.Property(TotalEpisodes)) + Container.Content(tvshows)</visible>
				</control>
				<!-- Bullet -->
				<control type="image">
					<width>8</width>
					<height>32</height>
					<texture>Dot.png</texture>
					<aspectratio align="center" aligny="center">keep</aspectratio>
					<colordiffuse>BulletDiffuse</colordiffuse>
					<visible>!IsEmpty(ListItem.Property(TotalEpisodes)) + Container.Content(tvshows)</visible>
				</control>
				<!-- Unwatched Episode Count -->
				<control type="label">
					<width min="25" max="1200">auto</width>
					<height>30</height>
					<aligny>center</aligny>
					<font>METF_MediaDetailsSmall</font>
					<textcolor>MediaDetailsEpisodes</textcolor>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101]</label>
					<visible>!IsEmpty(ListItem.Property(TotalEpisodes)) + Container.Content(tvshows)</visible>
				</control>
			</control>
			<!-- Movie Sets -->
			<control type="label">
				<posx>240</posx>
				<posy>503</posy>
				<width>800</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>METF_MediaDetailsSmall</font>
				<textcolor>MediaDetailsGenre</textcolor>
				<label>$LOCALIZE[31313]</label>
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<include>VisibleIfMovieSet</include>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
