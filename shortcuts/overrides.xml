<?xml version="1.0" encoding="UTF-8"?>
<overrides>
	<!-- Widgets -->
	<!-- Recently Added -->
	<widget label="Recently Added Movies">MoviesRecentlyAdded</widget>
	<widget label="Recently Added TV Shows">TVShowsRecentlyAdded</widget>
	<widget label="Recently Added Music">MusicRecentlyAdded</widget>
	<widget label="Recently Added Music Videos">MusicVideosRecentlyAdded</widget>
	
	<!-- Recommended -->
	<widget label="Recommended Movies">MoviesWatchlist</widget>
	<widget label="Recommended TV Shows">TVShowsWatchlist</widget>
	<widget label="Recommended Music">MusicWatchlist</widget>
	<widget label="Recommended Added Music Videos">MusicVideosWatchlist</widget>
	
	<!-- Random -->
	<widget label="Random Movies">MoviesRandomItems</widget>
	<widget label="Random TV Shows">TVShowsRandomItems</widget>
	<widget label="Random Music">MusicRandomItems</widget>
	<widget label="Random Added Music Videos">MusicVideosRandomItems</widget>

	<!-- Weather -->
	<widget label="Weather Forecast">HomeForecast</widget>
	
	<!-- Default widgets -->
	<widgetdefault labelID="movies">MoviesRecentlyAdded</widgetdefault>
	<widgetdefault labelID="tvshows">TVShowsRecentlyAdded</widgetdefault>
	<widgetdefault labelID="music">MusicRecentlyAdded</widgetdefault>
	<widgetdefault labelID="musicvideos">MusicVideosRecentlyAdded</widgetdefault>
	<widgetdefault labelID="weather">HomeForecast</widgetdefault>
	
	<!-- Video addons 
	<widget label="Video addons">VideoAddons</widget>
	<widgetdefault labelID="videos">VideoAddons</widgetdefault> -->
	
	<!-- Music addons 
	<widget label="Music addons">MusicAddons</widget>
	<widgetdefault labelID="music">MusicAddons</widgetdefault> -->
	
	<!-- Pictures addons 
	<widget label="Pictures addons">PictureAddons</widget>
	<widgetdefault labelID="pictures">PictureAddons</widgetdefault> -->
	
	<!-- Program addons 
	<widget label="Program addons">ProgramAddons</widget>
	<widgetdefault labelID="programs">ProgramAddons</widgetdefault> -->
	
	<!-- Favourites 
	<widget label="Favourites">Favourites</widget>
	<widgetdefault labelID="1036">Favourites</widgetdefault> -->
	
	<!-- PVR -->
	<widget label="PVR Status">PVR</widget>
	<widgetdefault labelID="livetv">PVR</widgetdefault> 
	
	<!-- Playlists -->
	<widgetPlaylists>True</widgetPlaylists>
	
	
	<!-- Settings -->
	<warn heading="You are making a mistake!  Really do this?" message="There is NO coming back from this action?  It will end badly!">ActivateWindow(Settings)</warn>
	<forcesettings>False</forcesettings>
	
	<!-- Backgrounds -->
	<backgroundBrowse default="special://skin/extras">True</backgroundBrowse>
</overrides>